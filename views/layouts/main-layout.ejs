            <a href="/signup" class="waves-effect waves-light btn">signup</a>
            <a href="/login" class="waves-effect waves-light btn">Login</a>
          <% } %>
        </div>
        <div class="col s12 center-align">
            <h1><%= title %></h1>
        </div>
        <div class="col s12 center-align notifications">
          <% if(user){ %>
            <h3><a href="/notifications"><%= numMatches %></a></h3>
          <% } %>
        </div>
      </div>
      <%- body %>
    </div>
